<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Francisco Mendoza"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="11dp"
        android:id="@+id/title"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola, checaron los correos?"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/title"
        android:id="@+id/subject"
        android:textStyle="bold"
        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Me pueden decir si los siguiente correos fueron recibid..."
        android:layout_below="@+id/subject"
        android:layout_alignStart="@+id/subject"
        android:id="@+id/message"
        android:layout_marginTop="4dp"
        android:layout_alignEnd="@+id/time" />

    <TextView
        android:text="2:38 pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:id="@+id/time"
        android:textSize="12dp"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shipping-rts"
        android:layout_below="@+id/message"
        android:layout_alignStart="@+id/message"
        android:layout_marginTop="6dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="xs"
        app:buttonMode="regular"
        app:showOutline="true"
        app:roundedCorners="false"
        android:id="@+id/tag1" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="development"
        app:bootstrapBrand="primary"
        app:bootstrapSize="xs"
        app:buttonMode="regular"
        app:showOutline="true"
        app:roundedCorners="false"
        android:layout_alignBaseline="@+id/tag1"
        android:layout_toEndOf="@+id/tag1"
        android:layout_marginStart="4dp"
        android:id="@+id/bootstrapButton2" />

</RelativeLayout>